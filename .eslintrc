{
    "plugins": ["react"],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "never"
        ],
        "comma-dangle": [
            0,
            "never"
        ],
        "no-console": [
            0
        ]
    },
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
    	"sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    }
}
